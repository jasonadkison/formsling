<% content_for :body do %>

  <%= body_row "Hello #{@resource.first_name}," %>

  <%= body_row do %>
    Someone has requested a link to change your password. You can do this through the link below.
  <% end %>

  <%= body_row do %>
    <%= link_to 'Change my password', edit_password_url(@resource, reset_password_token: @token) %>
  <% end %>

  <%= body_row do %>
    If you didn't request this, please ignore this email. Your password won't change until you
    access the link above and create a new one.
  <% end %>

  <%= body_row 'Please do not respond to this automated email.' %>

  <%= body_row "Thanks,<br />FormSling Notification Service" %>

<% end %>
