<% content_for(:title) do %>
  Welcome <%= @resource.first_name %>!
<% end %>

<% content_for(:body) do %>
  <%= body_row align: :center do %>
    Please confirm your account email by clicking the button below.
  <% end %>
<% end %>

<% content_for(:button) do %>
  <%= button('Confirm My Email', confirmation_url(@resource, confirmation_token: @token)) %>
<% end %>
