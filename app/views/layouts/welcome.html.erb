<!DOCTYPE html>
<html lang="en">
  <head>
    <%= display_meta_tags site: 'FormSling' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= favicon_link_tag(asset_pack_path('media/images/favicon.ico')) %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <script src="https://kit.fontawesome.com/ae926a1cf5.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="welcome">
      <%= render 'layouts/nav' if user_signed_in? %>
      <%= render 'layouts/notifications' unless controller_name == 'dashboard' %>
      <%= yield %>
    </div>

    <%= javascript_pack_tag 'application' %>
  </body>
  <%= render 'layouts/welcome/footer' %>
</html>
