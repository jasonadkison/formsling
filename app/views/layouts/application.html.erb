<!DOCTYPE html>
<html>
  <head>
    <title>FormSling</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- !TODO: move to webpacker -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <%= stylesheet_pack_tag 'stylesheets/application', media: 'all' %>
  </head>

  <body>
    <header class="header">
      <div class="container">
        <nav class="level">
          <div class="level-left">
            <div class="level-item">
              <%= link_to 'FormSling', root_path, title: 'Home' %>
            </div>
          </div>
          <div class="level-right">
            <% if user_signed_in? %>
              <p class="level-item">
                <%= link_to('Dashboard', app_path, class: 'button is-dark is-outlined') unless controller_name == 'dashboard' %>
              </p>
              <p class="level-item">
                <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'button is-dark is-outlined') %>
              </p>
            <% else %>
              <p class="level-item">
                <%= link_to('Login', new_user_session_path, class: 'button is-dark is-outlined')  %>
              </p>
              <p>
                <%= link_to('Sign Up', new_user_registration_path, class: 'button is-dark is-outlined') %>
              </p>
            <% end %>
          </div>
        </nav>
      </div>
    </header>
    <section class="section">
      <div class="container">
        <%= yield %>
      </div>
    </section>
    <footer class="footer">
      <div class="container">
        Copyright &copy; 2020 FormSling. All rights reserved.
      </div>
    </footer>

    <!--
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    -->
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
