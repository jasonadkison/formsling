<nav class="navbar has-shadow is-spaced" role="navigation" aria-label="main navigation">
  <div class="container">

    <div class="navbar-brand">
      <%= link_to root_path, class: 'navbar-item' do %>
        Form<span>Sling</span>
      <% end %>

      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>


    <div class="navbar-menu">
      <div class="navbar-start">
        <% unless user_signed_in? %>
          <%= link_to 'Home', root_path, class: 'navbar-item' %>
          <%= link_to 'Features', root_path(anchor: 'features'), class: 'navbar-item' %>
          <%= link_to 'Pricing', root_path(anchor: 'pricing'), class: 'navbar-item' %>
          <%= link_to 'FAQ', root_path(anchor: 'faq'), class: 'navbar-item' %>
          <%= link_to 'Contact', contact_path, class: 'navbar-item' %>
        <% end %>
      </div>
      <div class="navbar-end">

        <% if user_signed_in? %>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              <%= current_user.full_name %>
            </a>

            <div class="navbar-dropdown">
              <%= link_to 'View Your Forms', root_path, class: 'navbar-item' %>
              <%= link_to 'Manage Account', edit_user_registration_path, class: 'navbar-item' %>
              <hr class="navbar-divider">
              <%= link_to 'Contact', contact_path, class: 'navbar-item' %>
              <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'navbar-item') %>
            </div>
          </div>
        <% else %>
          <div class="navbar-item">
            <div class="buttons">
              <%= link_to(content_tag(:strong, 'Sign Up for Free'), new_user_registration_path, class: 'button') %>
              <%= link_to('Login', new_user_session_path, class: 'button is-primary') %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>
